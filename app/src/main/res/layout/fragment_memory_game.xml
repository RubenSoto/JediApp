<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rubn.jediapp.fragments.MemoryGameFragment">

    <LinearLayout
        android:id="@+id/id_memory_intent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="start">
        <TextView
            android:id="@+id/memory_intent_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/memTextSize"
            android:text="@string/memory_intents"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="2dp"
             />
        <TextView
            android:id="@+id/memory_intent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/memTextSize"
            android:text="0"
            android:textStyle="bold"
            android:layout_marginEnd="1dp"
            />
        <TextView
            android:id="@+id/memory_text_loser"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/memory_loser_text"
            android:textSize="@dimen/memTextSize"
            android:textColor="@color/fbutton_color_orange"
            android:visibility="invisible"
            android:layout_marginEnd="1dp"
            />
        <TextView
            android:id="@+id/memory_text_loser2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/memory_loser_text"
            android:textSize="@dimen/memTextSize"
            android:textColor="@color/fbutton_color_pumpkin"
            android:visibility="invisible"
            android:layout_marginEnd="1dp"
            />
        <TextView
            android:id="@+id/memory_text_loser3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/memory_loser_text"
            android:textSize="@dimen/memTextSize"
            android:textColor="@color/fbutton_color_pomegranate"
            android:visibility="invisible"
            android:layout_marginEnd="1dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_memory_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/id_memory_intent">
        <LinearLayout
            android:id="@+id/layout_memory_row_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/btn_memory_row_0_column_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:src="@drawable/dice"/>
            <ImageView
                android:id="@+id/btn_memory_row_0_column_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:src="@drawable/dice"/>
            <ImageView
                android:id="@+id/btn_memory_row_0_column_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:src="@drawable/dice"/>
            <ImageView
                android:id="@+id/btn_memory_row_0_column_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:src="@drawable/dice"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_memory_row_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/btn_memory_row_1_column_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:src="@drawable/dice"/>
            <ImageView
                android:id="@+id/btn_memory_row_1_column_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:src="@drawable/dice" />
            <ImageView
                android:id="@+id/btn_memory_row_1_column_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:src="@drawable/dice" />
            <ImageView
                android:id="@+id/btn_memory_row_1_column_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:src="@drawable/dice" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_memory_row_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/btn_memory_row_2_column_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:src="@drawable/dice" />
            <ImageView
                android:id="@+id/btn_memory_row_2_column_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:src="@drawable/dice" />
            <ImageView
                android:id="@+id/btn_memory_row_2_column_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:src="@drawable/dice" />
            <ImageView
                android:id="@+id/btn_memory_row_2_column_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:src="@drawable/dice" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_memory_row_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/btn_memory_row_3_column_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:src="@drawable/dice" />
            <ImageView
                android:id="@+id/btn_memory_row_3_column_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:src="@drawable/dice" />
            <ImageView
                android:id="@+id/btn_memory_row_3_column_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:src="@drawable/dice" />
            <ImageView
                android:id="@+id/btn_memory_row_3_column_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:src="@drawable/dice" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
